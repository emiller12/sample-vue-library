{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "composite": true,
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["@types/node", "webpack-env"],
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.json"
  ],
  "exclude": ["node_modules", "dist"]
}
